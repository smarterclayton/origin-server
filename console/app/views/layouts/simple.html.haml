!!! 5
-# http://paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither
-ie_html :class => 'no-js', :lang => 'en' do
  %head
    = render "layouts/head"
    = render "layouts/console/stylesheets"

  %body{ :class => "simple #{controller.controller_name} #{controller.action_name}" }

    %a.skip-navigation{:href => '#content', :accesskey => '2'} Skip to main content

    %header
      = render 'layouts/simple/header'

    - if content_for? :important_layout
      = yield :important_layout

    #content.section-account{:role => 'main'}
      .container
        .row
          .span12
            %section.frame.primary
              .row-fluid
                - if content_for? :title and !@suppress_ribbon
                  %h1.ribbon= yield :title
                = flashes
                = yield
      - if content_for? :sub_layout
        = yield :sub_layout

    %footer
      = yield :footer

      = render 'layouts/footer'
      
    = render 'layouts/console/javascripts'